{
  env: {
    es6: true
  },
  ecmaFeatures: {
    classes: true,
    jsx: true,
    modules: true
  },
  rules: {
    strict: false,
    no-trailing-spaces: false,
    quotes: [1, "single", "avoid-escape"]
  },
  globals: {
    React: true,
    document: true,
    module: true,
    require: true
  }
}