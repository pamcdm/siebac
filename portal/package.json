{
  "name": "portal",
  "version": "0.0.0",
  "description": "SIEBAC Portal",
  "main": "app.js",
  "scripts": {
    "test": "npm run build && npm run test:api",
    "test:api": "mocha test/apiTest.js",
    "build:site": "gulp build",
    "lint": "gulp lint",
    "build:server": "mkdir -p dist && cp src/server/*.js dist/",
    "build": "mkdir -p dist && npm run build:site && npm run build:server",
    "watch": "gulp watch",
    "clean": "rm -r dist && rm -r build && rm -r release",
    "bower": "gulp bower",
    "release": "npm run build:server && gulp release",
    "start": "node app.js"
  },
  "watch": {
    "build:site": "src/site/*.js",
    "build:server": "src/server/*.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "latest"
  },
  "devDependencies": {
    "bower": "latest",
    "bower-files": "latest",
    "browserify": "latest",
    "chai": "^2.1.2",
    "gulp": "latest",
    "gulp-babel": "^5.2.0",
    "gulp-bower": "0.0.10",
    "gulp-eslint": "^0.7.0",
    "gulp-sass": "^1.3.3",
    "gulp-uglify": "^1.1.0",
    "karma": "^0.12.31",
    "karma-babel-preprocessor": "^5.2.1",
    "karma-browserify": "^4.0.0",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "mocha": "latest",
    "supertest": "latest"
  }
}
